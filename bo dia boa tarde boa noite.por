programa {
  funcao inicio() {
    inteiro numero
    escreva ("Digite um numero")
    leia (numero)
    escolha (numero){
      caso 300:
      escreva ("bom dia")
      pare
      caso 400:
      escreva ("boa tarde")
      pare
      caso 500:
      escreva ("boa noite")
      pare
      caso contrario:
      escreva ("numero invalido")
    }
  }
}
